@model List<ResultCarWithBrandsDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araba silme ekleme güncelleme arama listeleme 
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Vites Türü</th>
                                        <th>Km</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Detaylar</th>
                                        <th>Sitede Gör</th>
                                        <th>Fiyat Bilgileri</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var item in Model)
                                    {
                                        count++;
                                        <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.BrandName</td>
                                        <td>@item.Model</td>
                                        <td>@item.Transmission</td>
                                        <td>@item.Km</td>
                                        <td> <a href="/AdminCar/RemoveCar/@item.CarID" class="btn btn-danger">Sil</a> </td>
                                        <td> <a href="/AdminCar/UpdateCar/@item.CarID" class="btn btn-success">Güncelle</a> </td>
                                        <td> <a href="/CarList/CarDetail/@item.CarID" class="btn btn-dark">Detaylar</a> </td>
                                        <td> <a href="/CarList/CarDetail/@item.CarID" class="btn btn-warning">Sitede gör</a> </td>
                                        <td> <a href="/CarList/CarDetail/@item.CarID" class="btn btn-secondary">Fiyat Bilgileri</a> </td>
                                    </tr> 
                                    }
                                </tbody>
                            </table>
                            <a href="/AdminCar/CreateCar/" class="btn btn-primary">Araba ekle</a>
                        </div>

                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->
            <!-- end col -->
        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>
